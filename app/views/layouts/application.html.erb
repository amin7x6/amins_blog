<!DOCTYPE html>
<html>
  <head>
    <title>Amin's Blog</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'http://fonts.googleapis.com/css?family=Lato:300,400,700' %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css' %>
    <%= stylesheet_link_tag    'https://code.jquery.com/jquery-3.1.1.min.js' %>
    <%= stylesheet_link_tag    'https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js' %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>

    <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <a href="/"><%= image_tag "1.jpg", class: "navbar-brand" %></a>
          </div>

          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
            <form class="navbar-form navbar-right hidden-lg hidden-md hidden-sm no-form-lines">
              <div class="form-group">
                <input type="text" class="form-control" placeholder="Search">
              </div>
            </form>

            <ul class="nav navbar-nav">
              <li><a href="/">Home</a></li>
              <li><%= link_to "Create new post", new_post_path %></li>
            </ul>

            <hr class="hidden-lg hidden-md hidden-sm">

            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <li class="greet"><%= link_to current_user.first_name, edit_user_path(current_user) %></li>
              <li><%= link_to "Sign Out", sessions_path, method: :delete %></li>
              <% else %>
              <li><%= link_to "Sign Up", new_user_path %></li>
              <li><%= link_to "Login", new_session_path %></li>
               <% end %>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
       <% if flash[:notice] %>
         <div class="flash-notice"><%= flash[:notice] %></div>
       <% elsif flash[:alert] %>
         <div class="flash-alert"><%= flash[:alert] %></div>
       <% end %>

      <!-- <div class="container"> -->
       <%= yield %>
      <!-- </div> -->

    </body>
  </html>
